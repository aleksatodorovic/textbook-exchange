<h2><%= @user.name %> </h2>



<h2> <%= @user.name %> Books</h2>
<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%"> 
    <thead>
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Added by</th>
        </tr>
    </thead>
    <tbody>    
        <% @books.each do |x| %>
            <tr>
                <td><%= image_tag(x.image_url(:thumb).to_s) %></td>
                <td><%= link_to x.title, book_path(x), method: :get %></td>
                <td><%= x.isbn %></td>
                <td><%= "$" + x.price %></td>
                <td><%= @user.name %></td>
            </tr>
        <% end %>
    </tbody>
</table>
