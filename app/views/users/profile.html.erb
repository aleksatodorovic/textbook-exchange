<div class="spaceitout">
<div id="better">
<h2><%= "Hello, " + current_user.name =%> </h2>



<h2>Your Books</h2>

<table>
     <tbody>
                    <tr colspan="2">
                        <% @books.each do |x| %>
                            <tr>
                                        <table>
                                             <div class="spaceitout">
                                    <div id="entrybetter">
                                            <div class="entry-top">
                                                <tr>
                                                    <th colspan="2", class="entry-top">
                                                        <%= link_to x.title, book_path(x), method: :get %>
                                                    </th>
                                                </tr>
                                            </div>
                                                <tr>
                                                    <td rowspan="3", class="imagetable">
                                                         <%= image_tag(x.image_url(:thumb).to_s) %>  
                                                    </td>
                                                    <td>
                                                        <%= "ISBN: " + x.isbn %>
                                                    </td>
                                                </tr>         
                                                <tr>
                                                    <td>
                                                        <%= "$" + x.price %>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <%= "Sold by: " + x.user.name %>
                                                    </td>
                                                </tr>
                                            </div>

                                    </div>
                                </div>
                                                                        </table>
                            </tr>
                        <% end %>
                    </tr>
                </tbody>
</table>

</div>
</div>


