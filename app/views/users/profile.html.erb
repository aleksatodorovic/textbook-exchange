<div class="spaceitout">
<div id="better">
<h2>My Account</h2>



<h2>My Books</h2>
<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%"> 
    <thead>
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Added by</th>
            <% if logged_in? %>
                <th>Action</th>
            <% end %>
        </tr>
    </thead>
    <tbody>    
        <% @books.each do |x| %>
            <tr>
                <td><%= image_tag(x.image_url(:thumb).to_s) %></td>
                <td><%= link_to x.title, book_path(x), method: :get %></td>
                <td><%= x.isbn %></td>
                <td><%= "$" + x.price %></td>
                <td><%= current_user.name %></td>
                <% if logged_in? %>
                    <% if current_user.id == x.user_id %>
                        <td><button onclick="alert('Are you sure?')"><%= button_to 'Delete', x, method: :delete, data: {confirm: 'Are you sure?'} %></button></td>
 
                    <% else %>
                        <td><%= button_to 'More info', book_path(x), method: :get %></td>
                    <% end %>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>
</div>
</div>


