<div class="spaceitout">
<div id="better">
<table>
    <th colspan="3">
        <h2><%= @books.title %> </h2>
    </th>
    <tr>
        <td rowspan="3", class="imagetable">
             <%= image_tag(@books.image_url(:thumb).to_s) %>  
        </td>
        <td>
            <%= "ISBN: " + @books.isbn %>
        </td>
        <td>
            <%= "$" + @books.price %>
        </td>
    </tr>
    <tr>
        <td>
            <%= "Condition: " + @books.condition %>
        </td>
        <td>
                                                                    <% if logged_in? %>
                                                            <% if current_user.id == @books.user_id %>
                                                                <%= button_to 'Delete', @books, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-primary"  %>
                                                            <% else %>
                                                                           <%= link_to @books.user.name, user_path(@books.user),  method: :get %>
                                                            <% end %>
                                                        <%else%>
                                                                       <%= link_to @books.user.name, user_path(@books.user),  method: :get %>
                                                        <% end %>

        </td>
    </tr>         
    <tr>
        <td>
            <%= "Subject: " + @books.subject %>
        </td>
        <td>
            <%= "Description: " + @books.description %>
        </td>
        </td>
    </tr>
</table>
</div>
</div>