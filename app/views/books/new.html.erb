<h2>Add a Book</h2>


<%= form_for @books do |bt| %>

      <%= bt.label :title, "Title: " %>
      <%= bt.text_field :title, placeholder: "Great Expectations", required: true %>

      <%= bt.label :isbn, "ISBN: " %>
      <%= bt.text_field :isbn, :maxlength => 13, :minlength => 10, placeholder: "9780141439563", required: true %>

      <%= bt.label :price, "Indicate the Price (in USD $):" %>
      <%= bt.number_field :price, :min => 0, :step => 0.01, placeholder: "20.43", required: true %>
      
      <%= bt.label :subject, "Subject: " %>
      <%= bt.text_field :subject, placeholder: "Algorithms", required: false %>
      
      <%= bt.label :condition, "Condition: " %>
      <%= bt.text_field :condition, placeholder: "Used", required: true %>
      
      <%= bt.label :description, "Description: " %>
      <%= bt.text_field :description, placeholder: "Please describe the book that you are selling and include your contact information", required: true %>
      

      <%= bt.submit "Add posting", class: "btn btn-primary" %>


<% end %>


