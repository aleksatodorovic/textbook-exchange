<div class="spaceitout">
   <div id="better">
      <h2>Add a Book</h2>
      <%= form_for @books, :html => {:class => "form-horizontal center"} do |bt| %>
         <div class="form-group">
            <%= bt.label :title, "Title ", class: "col-md-4 control-label" %>
            <div class="col-md-8">
               <%= bt.text_field :title, placeholder: "Great Expectations", required: true, class: "form-control"  %>
            </div>
         </div>
         <div class="form-group">
            <%= bt.label :isbn, "ISBN ", class: "col-md-4 control-label" %>
            <div class="col-md-8">
               <%= bt.text_field :isbn, :maxlength => 13, :minlength => 10, placeholder: "9780141439563", required: true, class: "form-control"  %>
            </div>
         </div>
         <div class="form-group">
            <%= bt.label :price, "Indicate the Price (in USD $)", class: "col-md-4 control-label" %>
            <div class="col-md-8">
               <%= bt.number_field :price, :min => 0, :step => 0.01, placeholder: "20.43", required: true, class: "form-control" %>
            </div>
         </div>
         <div class="form-group">
            <%= bt.label :image, "Upload a Photo of the Book: ", class: "col-md-4 control-label" %>
            <div class="col-md-8">
               <%= bt.file_field :image, :min => 0, :step => 0.01, placeholder: "image.jpg", required: true, class: "form-control" %>
            </div>
         </div>
         <%= bt.submit "Add posting", class: "btn btn-primary" %>
      <% end %>
   </div>
</div>