<h2> Books for Sale</h2>


<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%"> 
    <thead>
        <tr>
            <th colspan="2">
                <% if logged_in? %>
                    <a href="/new">Add a Book</a>
                <% else %>
                    <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
                <%end %>
                </th>
            <th colspan="2"><%= form_tag books_path, :method => :get do %> 
   <%= text_field_tag :search, params[:search] %>
   <%= submit_tag "Search" %>
<% end %></th>
        </tr>
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Added by</th>
            <% if logged_in? %>
                <th>Action</th>
            <% end %>
        </tr>
    </thead>
    <tbody>    
        <% @books.each do |x| %>
            <tr>
                <td><%= image_tag(x.image_url(:thumb).to_s) %></td>
                <td><%= x.title %></td>
                <td><%= x.isbn %></td>
                <td><%= "$" + x.price %></td>
                <td><%= @users.find_by_id(x.user).name unless @users.find_by_id(x.user).nil?%></td>
                <% if logged_in? %>
                    <% if current_user.id == x.user_id %>
                        <td><button onclick="alert('Are you sure?')"><%= button_to 'Delete', x, method: :delete, data: {confirm: 'Are you sure?'} %></button></td>
 
                    <% else %>
                        <td><%= button_to 'More info', book_path(x) %></td>
                    <% end %>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>
